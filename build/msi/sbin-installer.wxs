<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  
  <Package Name="sbin-installer" 
           Language="1033" 
           Version="1.0.6" 
           Manufacturer="WindowsAdmins" 
           UpgradeCode="12345678-1234-1234-1234-123456789012"
           Scope="perMachine">
    
    <SummaryInformation Description="Lightweight .pkg installer for Windows" />
    
    <!-- Upgrade handling -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <!-- Media and cab -->
    <MediaTemplate EmbedCab="yes" />
    
    <!-- Features -->
    <Feature Id="MainFeature" Title="sbin-installer" Description="Lightweight .pkg installer for Windows" Level="1">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="PathEnvironment" />
    </Feature>
    
    <!-- Directory structure -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="SbinFolder" Name="sbin">
        <Component Id="MainExecutable">
          <File Id="installer.exe" 
                Name="installer.exe" 
                Source="..\..\dist\installer.exe" />
        </Component>
        
        <Component Id="PathEnvironment">
          <Environment Id="PATH" 
                       Name="PATH" 
                       Value="[SbinFolder]" 
                       Permanent="no" 
                       Part="last" 
                       Action="set" 
                       System="yes" />
        </Component>
      </Directory>
    </StandardDirectory>
    
    <!-- UI -->
    <UI>
      <UIRef Id="WixUI_Minimal" />
    </UI>
    
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />
    
    <!-- Properties -->
    <Property Id="WIXUI_INSTALLDIR" Value="SbinFolder" />
    <Property Id="ARPHELPLINK" Value="https://github.com/windowsadmins/sbin-installer" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/windowsadmins/sbin-installer" />
    <Property Id="ARPCOMMENTS" Value="A lightweight .pkg installer for Windows, inspired by macOS /usr/sbin/installer" />
    <Property Id="ARPCONTACT" Value="https://github.com/windowsadmins/sbin-installer/issues" />
    
  </Package>
</Wix>

